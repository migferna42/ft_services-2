FROM alpine

EXPOSE 80 443

RUN apk update
RUN apk add bash sed

# nginx set up
RUN apk add nginx \
&& adduser -D -g 'www' www \
&& mkdir /www \
&& chown -R www:www /var/lib/nginx \
&& mkdir /run/nginx /wordpress /phpmyadmin
COPY nginx.conf /etc/nginx/nginx.conf

# ssl set up
RUN apk add openssl \
&& touch /etc/nginx/openssl.cnf \
&& cp /etc/ssl/openssl.cnf /etc/nginx/openssl.cnf \
&& mkdir -p /etc/ssl/private \
&& mkdir -p /etc/ssl/certs \
&& openssl req \
  -x509 -nodes -days 3650 -newkey rsa:2048 \
  -subj "/CN=172.17.0.2" \
  -config /etc/nginx/openssl.cnf \
  -keyout /etc/ssl/private/self-signed.key \
  -out /etc/ssl/certs/self-signed.crt

CMD mv /phpmyadmin /www && mv /wordpress /www && \
chmod 775 -R /www && nginx -g "daemon off;"
